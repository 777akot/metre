import * as React from 'react';
import { Chip, Avatar, TextField } from '@material-ui/core';
import { Face } from '@material-ui/icons';

export class Field extends React.Component<any, any, any> {
  render() {
    const { label, path, onDelete } = this.props;

    return <Chip
      label={<React.Fragment>
        <div>{label}</div>
        <div>{path}</div>
      </React.Fragment>}
      onDelete={onDelete}
    />;
  }
}

export const query = (f) => ({
  [f.id]: f.value.value,
});

export class Filter extends React.Component<any, any, any> {
  render() {
    const { filter, onChange } = this.props;

    return <TextField
      style={{ margin: 0 }}
      margin="normal"
      variant="outlined"
      fullWidth
      type="number"
      value={filter ? filter.value.value : ''}
      onChange={event => onChange({ abc: event.target.value })}
    />;
  }
}

export class Cell extends React.Component<any, any, any> {
  render() {
    const { value } = this.props;
    return value;
  }
}